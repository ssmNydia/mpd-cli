#!/usr/bin/env node
const package = require('../package')
const cli = require('../lib/cli')

cli.checkversion(package.version).then(()=>{
  cli.program
    .version(package.version, '-v, --version')
    .usage('<command> [options]')
    .command('init', cli.chalk.green('创建一个mpd项目'))
    .command('add', cli.chalk.green('新增 页面 or 组件'))
    .command('dev', cli.chalk.green('启动调试服务器'))
    .command('serve', cli.chalk.green('启动测试服务器运行编译后代码'))
    .command('build', cli.chalk.green('项目打包'))
    .command('update', cli.chalk.green('更新代码写法适应新版mpd-cli书写规则'))
    .command('mini', cli.chalk.green('对 css、js 进行压缩'))
    .command('less', cli.chalk.green('less编译为css'))
    .command('base', cli.chalk.green('指定目录内所有文件合并为base.min.*'))
    .parse(process.argv)

  if (cli.program.args.length === 0) {
    cli.program.help()
  }
})